<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".UrediAktivnost">

    <TextView
        android:id="@+id/naslov"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Pregled na aktivnost" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/MarginBottomInfo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/imeText"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Aktivnost: " />

        <TextView
            android:id="@+id/ime"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/MarginBottomInfo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/datumText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Datum" />

        <TextView
            android:id="@+id/datum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/MarginBottomInfo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vremeText"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Vreme" />

        <TextView
            android:id="@+id/vreme"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/MarginBottomInfo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lokacijaText"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Lokacija" />

        <TextView
            android:id="@+id/lokacija"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/MarginBottomInfo"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Status" />

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nemaVolonter"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/volonterText"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Volonter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Seuste nema naznaceno" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/volonterInfo"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/volonterNaslov"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Volonter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/MarginBottomInfo"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/volonterImePH"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ime i Prezime" />

            <TextView
                android:id="@+id/volonterIme"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ime i prezime" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/MarginBottomInfo"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/volonterTelPH"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Telefonski broj" />

            <TextView
                android:id="@+id/volonterTel"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Telefonski broj" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/MarginBottomInfo"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/volonterRejtingPH"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ocena" />

            <TextView
                android:id="@+id/volonterRejting"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ocena" />


        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/volonterButtons"
        android:visibility="gone"
        android:orientation="horizontal">

        <Button
            android:id="@+id/volonterOdbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:layout_marginRight="@dimen/marginLeftInfo"
            android:layout_weight="1"
            android:text="Odbij" />

        <Button
            android:id="@+id/volonterPrifati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:layout_weight="1"
            android:text="Prifati" />


    </LinearLayout>



    <Button
        android:id="@+id/zavrsi"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="Zavrsi" />

    <Button
        android:id="@+id/nazad"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nazad" />

</LinearLayout>